<%- include('../partials/header') %>

<h2>Plans</h2>
<table id="plans">
    <thead>
        <tr>
            <th>Plan Type</th>
        </tr>
    </thead>
    <tbody>
        <% plans.forEach(function(m) { %>
            <tr>
                <td><%= m.category %></td>
                <td>
                    <form 
                    action="/plans/<%= m._id %>?_method=DELETE" 
                    method="POST"
                    class="delete-form">
                        <button type="submit">Delete</button>
                    </form>
                    <td><button><a href="/plans/<%= m._id %>">Details</a></button></td>
                </td>
            </tr>
            <% }); %>
    </tbody>
</table>

<%- include('../partials/footer') %>