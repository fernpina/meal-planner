<%- include('../partials/header') %>
<section it="Plan-show-page">
    <div>Name:</div>
    <div><%= plan.plan %></div>
  <div>Plan Type: </div>
  <div><%= plan.category %></div>
  <a href="/plans/<%= plan._id%>/edit"> Edit Plan</a>
</section>

<button><a href="/plans/<%= plan._id %>/meals/new">New Meal</a></button>

<% if (meals.length) { %>
  <% meals.forEach(function(meal) { %>
      <br><tr>
          <td><%= meal.name %></td>
          <td><%= meal.description %></td>
          <td><%= meal.protein %></td>
          <td><%= meal.carbs %></td>
          <td><%= meal.fats %></td>
      </tr>
      <% }); %>
  <tbody>
  </tbody>
</table>
<% } else { %>
<br><h5>No Current Meals</h5>
<% } %>

<%- include('../partials/footer') %>